            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar"  >
        </activity>
        <activity
            android:name="msp.loanmanager.MainMenuActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
