            android:name="msp.loanmanager.SettledLoansActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_settled_loans"
            android:theme="@android:style/Theme.Black.NoTitleBar"  >
        </activity>
        <activity
            android:name="msp.loanmanager.UpcomingLoansActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_upcoming_loans"
            android:theme="@android:style/Theme.Black.NoTitleBar"  >
