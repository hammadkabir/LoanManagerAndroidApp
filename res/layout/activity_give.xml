<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GiveActivity" >

    <EditText
        android:id="@+id/add_person_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:ems="10"
        android:inputType="textPersonName" >

        <requestFocus />
    </EditText>
    
    <EditText
        android:id="@+id/add_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/add_person_name"
        android:layout_below="@+id/add_person_name"
        android:layout_marginTop="51dp"
        android:ems="10"
        android:inputType="textMultiLine" >

        <requestFocus />
    </EditText>
    
    <EditText
        android:id="@+id/add_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/add_item_name"
        android:layout_below="@+id/add_item_name"
        android:layout_marginTop="51dp"
        android:ems="10"
        android:inputType="textMultiLine" >

        <requestFocus />
    </EditText>
    
    <EditText
        android:id="@+id/add_item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/add_category_name"
        android:layout_below="@+id/add_category_name"
        android:layout_marginTop="51dp"
        android:ems="10"
        android:inputType="number" >

        <requestFocus />
    </EditText>
    
    <EditText
        android:id="@+id/add_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/add_item_count"
        android:layout_below="@+id/add_item_count"
        android:layout_marginTop="51dp"
        android:ems="10"
        android:inputType="numberDecimal" >

        <requestFocus />
    </EditText>
    
    <EditText
        android:id="@+id/add_loan_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/add_amount"
        android:layout_below="@+id/add_amount"
        android:layout_marginTop="51dp"
        android:ems="10"
        android:inputType="date" >

        <requestFocus />
    </EditText>
    
    <EditText
        android:id="@+id/add_due_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/add_loan_date"
        android:layout_below="@+id/add_loan_date"
        android:layout_marginTop="51dp"
        android:ems="10"
        android:inputType="date" >

        <requestFocus />
    </EditText>
    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/add_person_name"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:text="Given To"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/add_item_name"
        android:layout_below="@+id/add_person_name"
        android:layout_marginTop="25dp"
        android:text="Item Name"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/add_category_name"
        android:layout_below="@+id/add_item_name"
        android:layout_marginTop="25dp"
        android:text="Category Name"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/add_item_count"
        android:layout_below="@+id/add_category_name"
        android:layout_marginTop="25dp"
        android:text="Item Count"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/add_amount"
        android:layout_below="@+id/add_item_count"
        android:layout_marginTop="25dp"
        android:text="Amount"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/add_loan_date"
        android:layout_below="@+id/add_amount"
        android:layout_marginTop="25dp"
        android:text="Loan Date"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/add_due_date"
        android:layout_below="@+id/add_loan_date"
        android:layout_marginTop="25dp"
        android:text="Due Date"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <Button
        android:id="@+id/add_loan_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/add_due_date"
        android:layout_below="@+id/add_due_date"
        android:layout_marginTop="66dp"
        android:text="OK" />

    <Button
        android:id="@+id/add_loan_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/add_loan_confirm"
        android:layout_alignBottom="@+id/add_loan_confirm"
        android:layout_alignRight="@+id/add_due_date"
        android:text="Cancel" />

</RelativeLayout>