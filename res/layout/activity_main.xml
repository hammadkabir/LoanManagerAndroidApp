<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#DCEBFC"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" xmlns:android="http://schemas.android.com/apk/res/android">
    
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignLeft="@+id/bGive"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/welcome" />
	
    <LinearLayout
        android:id="@+id/lLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:orientation="horizontal"
        android:weightSum="100" >

        <Button
            android:id="@+id/bGive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_weight="100"
            android:text="Add Loan"
            android:textSize="20sp" />

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/lLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lLayout1"
        android:weightSum="100" >

        <Button
            android:id="@+id/bTake2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="50"
            android:text="Loans to Group"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bGive2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="50"
            android:text="Loans to Person"
            android:textSize="20dp" />

    </LinearLayout>
    
	<LinearLayout
	    android:id="@+id/lLayout3"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/lLayout2"
	    android:weightSum="100" >

	    <Button
	        android:id="@+id/bDeadlines"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_marginLeft="2dp"
	        android:layout_weight="50"
	        android:text="Upcoming Deadlines"
	        android:textSize="20dp" />

	    <Button
	        android:id="@+id/bsLoans"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_marginLeft="2dp"
	        android:layout_toRightOf="@+id/bDeadlines"
	        android:layout_weight="50"
	        android:text="Settled loans"
	        android:textSize="20dp" />

	</LinearLayout>

	<LinearLayout
	    android:id="@+id/lLayout4"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/lLayout3"
	    android:weightSum="100" >

	    <Button
	        android:id="@+id/bGroups"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="2dp"
	        android:layout_weight="50"
	        android:text="My Groups"
	        android:textSize="20dp" />

	    <Button
	        android:id="@+id/bPersons"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="2dp"
	        android:layout_toRightOf="@+id/bGroups"
	        android:layout_weight="50"
	        android:text="My Persons"
	        android:textSize="20dp" />

	</LinearLayout>
	   
</RelativeLayout>